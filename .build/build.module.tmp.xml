	<loadfile property="versionFound" file="${srcModulesCmp}/${module_name}.xml" >
		<filterchain>
			<!-- find line-->
			<linecontainsregexp>
				<regexp pattern="&lt;version&gt;(.*)&lt;" />
			</linecontainsregexp>
			<!-- extract version-->
			<replaceregexp>
				<regexp pattern="(&lt;version&gt;)(.*)(&lt;&#47;version&gt;)" replace="\2" />
			</replaceregexp>
			<striplinebreaks />
		</filterchain>
